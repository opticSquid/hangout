meta {
  name: Renew Token
  type: http
  seq: 3
}

get {
  url: {{auth_url_gateway}}/auth/renew
  body: json
  auth: none
}

headers {
  OS: ubuntu/linux
  Screen-Height: 1920
  Screen-Width: 1080
}

body:json {
  {
    "token": "{{refresh_token}}"
  }
}

script:post-response {
  bru.setEnvVar("access_token",res.body.accessToken);
  bru.setEnvVar("refresh_token",res.body.refreshToken);
}
